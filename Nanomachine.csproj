<Project Sdk="Godot.NET.Sdk/4.4.1">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <RootNamespace>Nanomachine</RootNamespace>
    <!-- Catch compiler-mismatch issues with the Introspection generator as early as possible -->
    <WarningsAsErrors>CS9057</WarningsAsErrors>
    <!-- Required for some nuget packages to work -->
    <!-- godotengine/godot/issues/42271#issuecomment-751423827 -->
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <!-- To show generated files -->
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <!--
      <CompilerGeneratedFilesOutputPath>.generated</CompilerGeneratedFilesOutputPath>
    -->
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Title>Nanomachine</Title>
    <Version>1.0.0</Version>
    <Description>Nanomachine</Description>
    <Copyright>Â© 2025 qwqsoft</Copyright>
    <Authors>bromine</Authors>
    <Company>qwqsoft</Company>

    <SkipTests Condition="'$(SKIP_TESTS)' != ''">true</SkipTests>
    <RunTests>false</RunTests>
  </PropertyGroup>

  <PropertyGroup Condition="&#xA;        ('$(Configuration)' == 'Debug' or '$(Configuration)' == 'ExportDebug')&#xA;        and '$(SkipTests)' != 'true' ">
    <RunTests>true</RunTests>
    <DefineConstants>$(DefineConstants);RUN_TESTS</DefineConstants>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
  </PropertyGroup>

  <ItemGroup Condition="'$(RunTests)' == 'true'">
    <!-- Test dependencies go here! -->
    <!-- Dependencies added here will not be included in release builds. -->
    <PackageReference Include="Chickensoft.GoDotTest" Version="1.6.16" />
    <!-- Used to drive test scenes when testing visual code -->
    <PackageReference Include="Chickensoft.GodotTestDriver" Version="3.1.13" />
    <!-- Bring your own assertion library for tests! -->
    <!-- We're using Shouldly for this example, but you can use anything. -->
    <PackageReference Include="Shouldly" Version="4.3.0" />
    <PackageReference Include="Moq" Version="4.20.72" />
  </ItemGroup>

  <ItemGroup>
    <!-- Production dependencies go here! -->
    <PackageReference Include="Chickensoft.log" Version="1.0.10" />
    <PackageReference Include="Chickensoft.Log.Godot" Version="1.0.16" />
    <PackageReference Include="Chickensoft.GameTools" Version="2.0.20" />
    <PackageReference Include="System.IO.Abstractions" Version="22.0.14" />
    <PackageReference Include="EnvironmentAbstractions" Version="5.0.0" />
    <PackageReference Include="GodotSharp.SourceGenerators" Version="2.5.0" PrivateAssets="all" OutputItemType="analyzer" />
    <PackageReference Include="Chickensoft.SaveFileBuilder" Version="1.3.13" />
    <PackageReference Include="Chickensoft.AutoInject" Version="2.7.13" PrivateAssets="all" />
    <PackageReference Include="Chickensoft.Collections" Version="1.13.12" />
    <PackageReference Include="Chickensoft.GodotNodeInterfaces" Version="2.4.20" />
    <PackageReference Include="Chickensoft.Introspection" Version="3.0.2" />
    <PackageReference Include="Chickensoft.Introspection.Generator" Version="3.0.2" PrivateAssets="all" OutputItemType="analyzer" />
    <PackageReference Include="Chickensoft.Serialization" Version="3.0.1" />
    <PackageReference Include="Chickensoft.Serialization.Godot" Version="0.8.8" />
    <PackageReference Include="Chickensoft.LogicBlocks" Version="5.19.1" />
    <PackageReference Include="Chickensoft.LogicBlocks.DiagramGenerator" Version="5.19.1" PrivateAssets="all" OutputItemType="analyzer" />
    <PackageReference Include="Chickensoft.UMLGenerator" Version="0.1.5" PrivateAssets="all" OutputItemType="analyzer" />
  </ItemGroup>

  <ItemGroup Condition="'$(RunTests)' != 'true'">
    <Compile Remove="test/**/*.cs" />
    <None Remove="test/**/*" />
    <EmbeddedResource Remove="test/**/*" />
  </ItemGroup>
</Project>
